{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "lib": [
    "es2015"
  ],
  "exclude": [ "src/tests/**/*.ts", "src/**/*.test.ts", "src/**/__test__/**/*.ts" ]
}